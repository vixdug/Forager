.comment

  .ui.comments

    .comment
      %a.avatar
        %img{:src => "https://fitisafeministissue.files.wordpress.com/2015/06/happy.png"}/
      .content
        %a.author= comment.user.name
        .metadata
          %span.date
          = time_ago_in_words(comment.created_at)
          ago
        .text
          = comment.comment
        .actions
          = link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure?" }
        %br/

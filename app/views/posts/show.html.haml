.ui.text.container
  #post_content

  %h3= @post.title
  .ui.dividing.header

  %p= @post.content

  #comments
    %p= @post.comments.count
    %h3.ui.dividing.header Comments
    = render @post.comments

    %p Reply to thread
    = render "comments/form"

  = link_to "Edit", edit_post_path(@post)
  = link_to "Delete", post_path(@post), method: :delete, data: { confirm: "are you sure you want to delete this post?"}
  = link_to "Forum", posts_path

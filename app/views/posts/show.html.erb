<div class="ui raised centered card">
  <div class="content">
    <div class="header">    <%= @post.title %>
</div>
    <div class="meta">
      <span class="category"></a>
      <%= time_ago_in_words(@post.created_at) %> ago.</span>
    </div>
    <div class="description">
      <p>  <%= @post.content %></p>
    </div>
  </div>
  <div class="extra content">
    <div class="right floated author">
      <img class="ui avatar image" src='<%= @post.user.avatar %>'> Posted by: <a><%= @post.user.name %></a>
    </div>
    <div>
      <%= link_to "Edit", edit_post_path(@post), class:"ui inverted olive small left floated button" %>
    </div>
<%= link_to "Delete", post_path(@post),class:"ui small left floated button",  method: :delete, data: { confirm: "are you sure you want to delete this post?"} %>
  </div>
</div>


  <div id="comments">
    <p>
    </p>
    <h3 class="ui dividing header"><%= @post.comments.count %>

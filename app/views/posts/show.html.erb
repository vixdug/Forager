    <%= render @post.comments %>
    <% if current_user %>
    <p>Reply to thread</p>
    <%= render "comments/form" %>
  </div>
  <% else %>
  <p> Please <%= link_to "sign in", login_path %> to leave comment </p>
<% end %>


